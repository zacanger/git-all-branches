{
  "name": "ts-cli-boilerplate",
  "description": "Boilerplate for simple TypeScript command-line tools",
  "version": "1.1.3",
  "private": true,
  "author": {
    "email": "zac@zacanger.com",
    "name": "Zac Anger",
    "url": "https://zacanger.com"
  },
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/zacanger"
  },
  "license": "LGPL-3.0",
  "main": "index.js",
  "files": [
    "index.js",
    "lib"
  ],
  "bin": "./index.js",
  "scripts": {
    "build": "tsc",
    "prebuild": "npm t",
    "preversion": "npm run build",
    "test": "run-s -s test:ts test:lint test:cover",
    "test:cover": "nyc npm run test:tape",
    "test:lint": "eslint --ext .ts -c .eslintrc.json src/*.ts",
    "test:tape": "tape -r ts-node/register src/*.test.ts | tap-spec",
    "test:ts": "tsc --noEmit"
  },
  "homepage": "https://github.com/zacanger/ts-cli-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/ts-cli-boilerplate.git"
  },
  "bugs": "https://github.com/zacanger/ts-cli-boilerplate/issues",
  "keywords": [
    "boilerplate",
    "cli",
    "ts",
    "typescript"
  ],
  "dependencies": {
    "zeelib": "11.0.12"
  },
  "devDependencies": {
    "@types/node": "13.9.3",
    "@types/tape": "4.2.34",
    "eslint": "6.8.0",
    "eslint-plugin-zacanger": "1.1.3",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "npm-run-all": "4.1.5",
    "nyc": "15.0.0",
    "prettier": "2.0.1",
    "sortpack": "2.1.2",
    "tap-spec": "5.0.0",
    "tape": "4.13.2",
    "ts-node": "8.8.1",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "package.json": [
      "sortpack"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "nyc": {
    "exclude": [
      "src/*.test.ts"
    ],
    "extensions": [
      "*.ts"
    ],
    "include": [
      "src/*.ts"
    ],
    "instrument": true,
    "reporter": [
      "text",
      "html",
      "json"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true
  }
}
